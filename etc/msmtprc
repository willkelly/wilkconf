defaults
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/wilkconf/logs/msmtp.log

account gmail
host smtp.gmail.com
from the.william.kelly@gmail.com
auth on
user the.william.kelly@gmail.com
passwordeval emacsclient -a "" --eval '(offlineimap-get-password "smtp.gmail.com" "465")' | tr -d '"'
port 465


account work
host rackermail.cannot.name
from william.kelly@rackspace.com
auth on
user william.kelly
passwordeval emacsclient -a "" --eval '(offlineimap-get-password "rackermail.cannot.name" "465")' | tr -d '"'
port 465


# Set a default account
account default : gmail